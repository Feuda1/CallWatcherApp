{
    "name": "call-watcher",
    "version": "1.0.0",
    "description": "Мониторинг звонков и создание заявок для clients.denvic.ru",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win"
    },
    "author": "Denvic",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "ru.denvic.callwatcher",
        "productName": "Call Watcher",
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        }
    }
}