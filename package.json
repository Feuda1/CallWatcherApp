{
    "name": "call-watcher",
    "version": "1.0.2",
    "description": "Мониторинг звонков и создание заявок для clients.denvic.ru",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win"
    },
    "author": "Denvic",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "ru.denvic.callwatcher",
        "productName": "Call Watcher",
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": true
        },
        "publish": [
            {
                "provider": "github",
                "owner": "Feuda1",
                "repo": "CallWatcherApp"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Feuda1/CallWatcherApp.git"
    },
    "dependencies": {
        "electron-log": "^5.4.3",
        "electron-updater": "^6.7.3"
    }
}